set number
set expandtab
set ignorecase
set smartcase
set laststatus=2
set nocompatible
set encoding=utf-8
set fileencodings=ucs-2le,utf-8,cp936

set langmenu=en_US
let $LANG = 'en_US'
source $VIMRUNTIME/delmenu.vim
source $VIMRUNTIME/menu.vim
syntax on

set autoindent

filetype plugin on

set showcmd
set wildmenu
set hidden
set backspace=indent,eol,start
set fileformats=dos,unix
set ruler
set showmatch
set noswapfile
set shiftwidth=4
set tabstop=4
set autoread
set splitright

set nowritebackup
set nobackup
set virtualedit=block
set ambiwidth=double
set showcmd

set textwidth=80
set belloff=all
set timeoutlen=1000 ttimeoutlen=0

if has("gui_running")
  if has("gui_gtk2")
    set guifont=Bitstream\ Vera\ Sans\ Mono\ 12,Fixed\ 12
    set guifontwide=Microsoft\ Yahei\ 12,WenQuanYi\ Zen\ Hei\ 12
  elseif has("gui_win32")
    set guifont=Cascadia\ Mono:h13:cANSI
  endif
endif
